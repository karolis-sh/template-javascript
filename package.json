{
  "name": "template-javascript",
  "version": "0.0.0",
  "private": true,
  "keywords": [],
  "repository": "git@github.com:karolis-sh/template-javascript.git",
  "license": "MIT",
  "author": "Karolis Å arapnickis",
  "main": "index.js",
  "scripts": {
    "commit": "npx cz",
    "format": "run-p format:*",
    "format:package.json": "sort-package-json",
    "format:prettier": "prettier --write '**/*.*'",
    "lint": "run-p lint:*",
    "lint:js": "eslint . --cache --ignore-path .gitignore",
    "lint:md": "markdownlint-cli2 '**/*.md' '!node_modules' '!**/node_modules' '!**/CHANGELOG.md'",
    "qa": "run-p lint",
    "release": "yarn && run-s qa && standard-version --no-verify && git push --follow-tags --no-verify && npm publish",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/package.json": "sort-package-json",
    "*.js": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@k.sh/eslint-config": "^1.21.2",
    "@k.sh/prettier-config": "^0.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": ">=13.1.0",
    "markdownlint-cli2": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "prettier-plugin-sh": "^0.12.8",
    "pretty-quick": "^3.1.3",
    "sort-package-json": "^1.50.0",
    "standard-version": "^9.5.0"
  }
}
