{
  "name": "template-javascript",
  "version": "0.0.0",
  "private": true,
  "keywords": [],
  "repository": "git@github.com:karolis-sh/template-javascript.git",
  "license": "MIT",
  "author": "Karolis Å arapnickis <pastas.k@gmail.com>",
  "main": "index.js",
  "scripts": {
    "commit": "npx cz",
    "format": "run-p format:*",
    "format:js": "prettier --write '**/*.*'",
    "format:package.json": "sort-package-json package.json",
    "lint": "run-p lint:*",
    "lint:js": "eslint .",
    "lint:md": "markdownlint **/*.md",
    "qa": "run-p lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn qa"
    }
  },
  "lint-staged": {
    "**/package.json": [
      "sort-package-json"
    ],
    "*.{json,md,html}": [
      "pretty-quick --staged"
    ],
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@k.sh/eslint-config": "^1.17.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "markdownlint-cli": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "pretty-quick": "^3.0.2",
    "sort-package-json": "^1.46.0"
  }
}
